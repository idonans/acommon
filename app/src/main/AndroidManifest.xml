<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.idonans.acommon.demo">
    <application android:name="com.idonans.acommon.demo.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MainAppTheme">
        <activity android:name="com.idonans.acommon.demo.boot.BootActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainAppTheme.Boot"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.idonans.acommon.demo.splash.SplashActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/MainAppTheme.Splash"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
    </application>
</manifest>