<?xml version="1.0" encoding="utf-8"?>
<com.idonans.acommon.widget.AcommonContentView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff0000">
    <android.support.v4.widget.DrawerLayout android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff7777ff"
            android:clickable="true">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff00"
                android:orientation="vertical">
                <include layout="@layout/acommon_status_bar_space"/>
                <TextView android:id="@+id/message_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <EditText android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button android:id="@+id/set_fullscreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="set fullscreen"/>
                <Button android:id="@+id/unset_fullscreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="unset fullscreen"/>
            </LinearLayout>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="bottom text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        </FrameLayout>
        <LinearLayout android:id="@+id/main_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#ff919191"
            android:clickable="true"
            android:orientation="vertical">
            <include layout="@layout/acommon_status_bar_space"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="drawer menu"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</com.idonans.acommon.widget.AcommonContentView>
